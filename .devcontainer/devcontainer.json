{
  "name": "BetMates Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postStartCommand": "cd /workspaces/BetMates && ./start-expo.sh",
  "forwardPorts": [8081, 19000, 19001, 19002],
  "portsAttributes": {
    "8081": {
      "label": "Metro Bundler",
      "onAutoForward": "notify"
    },
    "19000": {
      "label": "Expo Dev Tools",
      "onAutoForward": "notify"
    },
    "19001": {
      "label": "Expo DevTools",
      "onAutoForward": "notify"
    },
    "19002": {
      "label": "Expo Tunnel",
      "onAutoForward": "notify"
    }
  },
  "remoteUser": "node",
  "postCreateCommand": "cd /workspaces/BetMates && npm install --legacy-peer-deps"
}
